<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginBottom="0dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_practitioner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/country_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:contentDescription="@string/action_settings"
                android:scaleType="centerCrop" />


            <Button
                android:id="@+id/btnDisp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="他画面の起動"
                android:background="#00FFFFFF"/>


            <TextView
                android:id="@+id/country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/country_photo"
                android:layout_alignLeft="@id/country_photo"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/country_photo"
                android:layout_alignTop="@id/country_photo"
                android:layout_below="@+id/country_photo"
                android:layout_margin="1dp"
                android:background="@drawable/bg_grad"
                android:gravity="bottom|left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:text="@string/hello_world"

                android:textColor="#ffffff"
                android:textSize="13sp" />
            <!--<Button-->
                <!--android:id="@+id/btnHeart"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBottom="@id/country_photo"-->
                <!--android:layout_alignLeft="@id/country_photo"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignRight="@id/country_photo"-->
                <!--android:layout_alignTop="@id/country_photo"-->
                <!--android:layout_below="@+id/country_photo"-->
                <!--android:text="♡"-->
                <!--android:gravity="bottom|right"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:background="#00FFFFFF"/>-->

        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>

